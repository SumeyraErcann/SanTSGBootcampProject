@model List<BootcampProje.Domain.Users.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Kullanıcılar</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">E-posta</th> 
            <th scope="col">Kayıt Tarihi</th>            
            <th scope="col">Diğer İşlemler</th>        
                       
        </tr>
    </thead>
    <tbody>
        @foreach (var users in Model)
        {
            <tr scope="row">
                <td>@users.UserName</td>
                <td>@users.Email</td>
                <td>@users.RegistrationDate.ToString(string.Format("dd/MM/yyyy"))</td>                 
                <td>
                    <a asp-controller="User" asp-action="Passive" asp-route-id="@users.Id">Pasif/Aktif Yap</a>
                    <a> veya </a>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@users.Id">Sil</a>
                </td>                
            </tr>            
        }
    </tbody>
</table>
